<?xml version="1.0" encoding="UTF-8"?>
<!-- TODO(dotdoom): move this, along with ProGuard, into shared repository -->
<!-- https://developer.android.com/studio/write/lint.html#config -->
<lint>
	<issue id="UnusedAttribute">
		<!--
			Some attributes are unavailable on lower API levels.
			Here we list those which can be safely ignored without
			causing significant side effects.
		-->
		<ignore regexp="^Attribute `(elevation|parentActivityName)`"/>
	</issue>
	<issue id="UnusedResources">
		<!-- This comes from google-services.json but nothing uses it. -->
		<ignore regexp="^The resource `R.string.project_id` appears to be unused$"/>
		<!-- Third-party licenses autogenerated resources -->
		<ignore regexp="^The resource `R.raw.third_party_licenses` appears to be unused$"/>
		<ignore regexp="^The resource `R.raw.third_party_license_metadata` appears to be unused$"/>
		<!-- LeakCanary icon name -->
		<ignore regexp="^The resource `R.string.leak_canary_display_activity_label` appears to be unused$"/>
	</issue>
	<issue id="MissingTranslation">
		<!-- LeakCanary icon name -->
		<ignore regexp="`leak_canary_display_activity_label`"/>
	</issue>
	<!-- TODO(ksheremet): fix these issues -->
	<issue id="GoogleAppIndexingWarning" severity="ignore"/>
	<issue id="MissingRegistered" severity="ignore"/>
	<issue id="KeyboardInaccessibleWidget" severity="ignore"/>
	<issue id="ObsoleteLintCustomCheck" severity="ignore"/>
	<issue id="GradleDependency">
		<!--
			https://developers.google.com/android/guides/overview
			"upgrading is not necessary if you don't care about new features or bug fixes"

			Bumping Play Services / Firebase version only bumps the requirement
			on the phone. We will manually update when we need some new feature
			or a bug fix. Devices will update automatically regardless.
		-->
		<ignore regexp="com.google.firebase|com.google.android.gms:play-services-auth"/>
	</issue>
</lint>
