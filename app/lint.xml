<?xml version="1.0" encoding="UTF-8"?>
<!-- TODO(dotdoom): move this, along with ProGuard, into shared repository -->
<!-- https://developer.android.com/studio/write/lint.html#config -->
<lint>
	<!-- We use ProGuard to remove specific log levels. -->
	<issue id="LogConditional" severity="ignore"/>
	<issue id="UnusedAttribute">
		<!--
			Some attributes are unavailable on lower API levels.
			Here we list those which can be safely ignored without
			causing significant side effects.
		-->
		<ignore regexp="^Attribute `(elevation|parentActivityName)`"/>
	</issue>
	<issue id="UnusedResources">
		<!--
			Due to interactions between Firebase and our custom build targets,
			some values from autogenerated files are unused.
			TODO(dotdoom): remove when Firebase crash reporting goes away.
		-->
		<ignore regexp="^The resource `R.string.google_crash_reporting_api_key` appears to be unused$"/>
		<ignore regexp="^The resource `R.string.project_id` appears to be unused$"/>
	</issue>
	<!-- TODO(ksheremet): fix these issues -->
	<issue id="GoogleAppIndexingWarning" severity="ignore"/>
	<issue id="MissingRegistered" severity="ignore"/>
	<issue id="KeyboardInaccessibleWidget" severity="ignore"/>
</lint>
