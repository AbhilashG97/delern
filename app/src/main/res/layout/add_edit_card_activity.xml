<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.dasfoo.delern.addupdatecard.AddEditCardActivity">

        <include
            layout="@layout/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/front_side_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/borders_margin"
            android:layout_marginStart="@dimen/borders_margin"
            android:layout_marginTop="@dimen/after_toolbar_margin"
            android:hint="@string/front_side_card_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/back_side_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/borders_margin"
            android:layout_marginStart="@dimen/borders_margin"
            android:layout_marginTop="@dimen/elements_margin"
            android:hint="@string/back_side_card_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/front_side_text" />

        <CheckBox
            android:id="@+id/add_reversed_card_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/elements_margin"
            android:text="@string/add_reversed_card_checkbox"
            app:layout_constraintStart_toStartOf="@+id/back_side_text"
            app:layout_constraintTop_toBottomOf="@+id/back_side_text" />

        <Button
            android:id="@+id/add_card_to_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:elevation="2dp"
            android:text="@string/add"
            app:layout_constraintStart_toStartOf="@+id/add_reversed_card_checkbox"
            app:layout_constraintTop_toBottomOf="@+id/add_reversed_card_checkbox" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
