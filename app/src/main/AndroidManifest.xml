<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dasfoo.delern">

    <application
        android:name=".DelernApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DelernMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signin.SignInActivity" />

        <service
            android:name=".notifications.DelernFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".notifications.DelernFirebaseInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".card.EditCardListActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".DelernMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.dasfoo.delern.DelernMainActivity" />
        </activity>
        <activity
            android:name=".card.AddEditCardActivity"
            android:parentActivityName=".card.EditCardListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.dasfoo.delern.card.EditCardListActivity" />
        </activity>
        <activity
            android:name=".card.PreEditCardActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".card.EditCardListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.dasfoo.delern.card.EditCardListActivity" />
        </activity>
        <activity
            android:name=".card.ShowCardsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".DelernMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.dasfoo.delern.DelernMainActivity" />
        </activity>
    </application>

</manifest>